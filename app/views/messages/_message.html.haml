.massege
  .chat-main__messages__upper-info
    %p.chat-main__messages__upper-info--talker
      = message.user.name
    %p.chat-main__messages__upper-info--date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__messages
    - if message.content.present?
      %p.chat-main__messages__text
        = message.content
    = image_tag message.image.url, class: 'chat-main__message__image' if message.image.present?
